{
  "name": "ds-browser",
  "version": "2.1.2",
  "description": "Browser for Domain Specifications",
  "main": "src/DSBrowser.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/semantifyit/ds-browser.git"
  },
  "keywords": [
    "schema.org",
    "Domain Specification",
    "Domain Specification Browser",
    "SHACL",
    "semantic web"
  ],
  "author": "Omar J. A. Holzknecht",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/semantifyit/ds-browser/issues"
  },
  "homepage": "https://github.com/semantifyit/ds-browser#readme",
  "scripts": {
    "build-all": "npm run-script prebuild && npm run-script build && npm run-script build-minified",
    "prebuild": "node scripts/buildCSS.js",
    "build": "browserify src/DSBrowser.js -s DSBrowser > dist/ds-browser.js",
    "build-minified": "browserify src/DSBrowser.js -s DSBrowser -g [uglifyify] > dist/ds-browser.min.js",
    "build-watch": "watchify src/DSBrowser.js -s DSBrowser -o dist/ds-browser.js",
    "eslint-check": "eslint src/*",
    "eslint-fix": "eslint --fix src/*",
    "prettier-check": "prettier --check src/*",
    "prettier-repair": "prettier --write src/*",
    "test-localhost": "node test/test-app.js"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "ds-utilities": "github:semantifyit/ds-utilities",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.1",
    "json-format-highlight": "^1.0.4",
    "prettier": "^2.4.1",
    "schema-org-adapter": "^4.3.0",
    "uglifyify": "^5.0.2",
    "watchify": "^4.0.0"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ]
}
